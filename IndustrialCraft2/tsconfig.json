{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext"],
    "outDir": "build/",
    "allowJs": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "typedoc",
    "node_modules",
    "**/node_modules/*",
    "dom"
  ],
  "include": [
	"../declarations/*.d.ts",
    "dev/core/**/*",
    "dev/block/**/*",
    "dev/machine/**/*",
	"dev/items/**/*", 
	"dev/recipes/*"
  ],
  "files": [
	"dev/header.js",
	"dev/translation.js"
  ]
}
